{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "removeComments": true,
        "skipLibCheck": true,
        "noImplicitUseStrict": true,
        "declaration": false,
        "lib": [
            "es2017",
            "dom",
            "webworker",
            "es6",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "@maxmobility/*": [
                "../../libs/*"
            ],
            "@maxmobility/mobile": [
                "../../xplat/mobile/index.ts"
            ],
            "@maxmobility/mobile/*": [
                "../../xplat/mobile/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "references.d.ts",
        "./node_modules/tns-platform-declarations/android-28.d.ts",
        "./node_modules/tns-platform-declarations/ios.d.ts",
        // sources
        "./app/main.ts",
        "app/**/*.module.ts",
        "../../nativescript-bluetooth/index.ts",
        "../../nativescript-bluetooth/bluetooth.android.ts",
        "../../nativescript-bluetooth/bluetooth.ios.ts"
    ],
    "compileOnSave": false
}
